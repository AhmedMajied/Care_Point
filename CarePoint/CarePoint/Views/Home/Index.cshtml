@using Extensions
@using CarePoint.Custom_HtmlHelpers
@using DAL
@{
    ViewBag.Title = "Carepoint";
}
@section styles{ 
    <link rel="stylesheet" href="~/Content/citizen-medical-history.css" />
}
<body>
    @{ var user = User.Identity.GetCitizen();}
    @if ( user is Specialist)
    {
        <a id="ilink-new-patient" class="active" href="#"><i class="fa fa-home"></i></a>
        <a id="ilink-curr-patient" href="#"><i class="fa fa-envelope fa-fw"></i></a>
        <a id="ilink-patient-list" href="#"><i class="fa fa-envelope fa-fw"></i></a>
        <a id="ilink-membership-req" href="#"><i class="fa fa-envelope fa-fw"></i></a>
        <a id="ilink-new-workplace" href="#"><i class="fa fa-envelope fa-fw"></i></a>
        <a id="ilink-curr-workplace" href="#"><i class="fa fa-envelope fa-fw"></i></a>
        <a id="ilink-switch-workplace" href="#"><i class="fa fa-envelope fa-fw"></i></a>
    }
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-2"><img src="" id="iimg-medical-place" /></div>
                <div class="col-md-6" id="idiv-record-header">//MedicalPlaceName+\n+DrName+\n+historyRecordDate</div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-2">Symptoms</div>
                <div class="col-md-6">
                    <ul id="iul-symptoms">
                        <li>//Symptom1</li>
                        <li>//Symptom2</li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">Diseases</div>
                <div class="col-md-6">
                    <ul id="iul-diseases">
                        <li>//Disease1</li>
                        <li>//Disease2</li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">Medicines</div>
                <div class="col-md-6">
                    <ul id="iul-medicines">
                        <li>//Medicine1 (Dose 1)</li>
                        <li>//Medicine2 (Dose 2)</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-md-2">Doctor remarks</div>
                <div class="col-md-6" id="remarks">//DoctorRemarksAsString</div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <table id="itbl-medical-history" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th id="itbl-hdr-date">Date</th>
                    <th id="itbl-hdr-place">Place</th>
                    <th id="itbl-hdr-doc">Doctor</th>
                </tr>
            </thead>
            <tbody>
                @{int cnt = 1;}
                @foreach (var record in user.HistoryRecords)
                {
                    string symptoms = record.Symptoms.FirstOrDefault().Name;
                    foreach(var symptom in record.Symptoms.Skip(1))
                    {
                        symptoms += ',' + symptom.Name;
                    }
                    string diseases = record.Diseases.FirstOrDefault().Name;
                    foreach (var disease in record.Diseases.Skip(1))
                    {
                        diseases += ',' + disease.Name;
                    }
                    string medicines = record.Doses.FirstOrDefault().Medicine.Name+"(" + record.Doses.FirstOrDefault().Description + ")";
                    foreach (var dose in record.Doses.Skip(1))
                    {
                        medicines += ',' + dose.Medicine.Name + "(" + dose.Description + ")";
                    }
                        
                    <tr id="itbl-row-@cnt++" onclick="populatePanel('@Convert.ToBase64String(record.MedicalPlace.Photo)','@record.MedicalPlace.Name','@record.Specialist.Name','@record.Date.Date.ToString()','@symptoms','@diseases','@medicines','@record.Remarks');">
                        <td>@record.Date.Date.ToString()</td>
                        <td>@record.MedicalPlace.Name</td>
                        <td>@record.Specialist.Name</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</body>
@section scripts{
    <script src="~/Scripts/medical-history.js"></script>
}