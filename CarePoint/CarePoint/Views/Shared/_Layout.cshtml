<!DOCTYPE html>
<html>
@model CarePoint.Models.SearchViewModels
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="~/Images/logo-navbar.ico" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/navbar.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/tab.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/scrollbar.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/modal.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/_Layout.css" />
    @RenderSection("styles", false)
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-default" style="background-color: #21c2eb;">
        <div class="container-fluid">
            <div class="navbar-header">
                <img id="iimg-logo" src="~/Images/logo-navbar.ico" class="img-rounded img-responsive">
            </div>

            @Html.Partial("_LoginPartial")

        </div>
    </nav>
    <div class="container-fluid">
        <div class="row" style="margin-top: 7em;">
            <div class="col-md-2">
                <div class="row">
                    <div class="container-fluid">
                        <button id="ibtn-sos-pop" class="btn btn-default" data-toggle="popover" data-placement="right">
                            <span class="fa fa-exclamation-triangle fa-lg" style="color: #D9534F"></span>&nbsp;Send an SOS
                        </button>
                    </div>
                    <div class="container-fluid">
                        <div id="idiv-srch-options">
                            <ul class="nav nav-tabs" role="tablist">
                                <li role="presentation" class="active">
                                    <a href="#itab-srch-location" role="tab" data-toggle="tab"><span class="fa fa-map-marker fa-2x"></span></a>
                                </li>
                                <li role="presentation">
                                    <a href="#itab-srch-drug" role="tab" data-toggle="tab"><span class="fa fa-flask fa-2x"></span></a>
                                </li>
                                <li role="presentation">
                                    <a href="#itab-srch-account" role="tab" data-toggle="tab"><span class="fa fa-user fa-2x"></span></a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div id="itab-srch-location" role="tabpanel" class="tab-pane active">
                                    <label>Service type:</label>
                                    <input id="iinp-service-type" class="form-control" type="text" placeholder="e.g. ICU, incubator, ..." />
                                    <br />
                                    <label>Place:</label>
                                    <input id="iinp-place-type" class="form-control" type="text" placeholder="e.g. ICU, incubator, ..." />
                                    <br />
                                    <label>Priority:</label>
                                    <br /><input id="ichk-distane" type="checkbox" checked /> Distance
                                    <br /><input id="ichk-cost" type="checkbox" /> Cost
                                    <br /><input id="ichk-rate" type="checkbox" /> Rate
                                    <br /><input id="ichk-popularity" type="checkbox" /> Popularity
                                    <br /><br />
                                    <button class="btn btn-success cbtn-srch"><span class="fa fa-search"></span> Search</button>
                                </div>
                                <div id="itab-srch-drug" role="tabpanel" class="tab-pane">
                                    Search options for drugs
                                    <br /><br />
                                    <button class="btn btn-success cbtn-srch"><span class="fa fa-search"></span> Search</button>
                                </div>
                                    <div id="itab-srch-account" role="tabpanel" class="tab-pane">
                                    @using (Html.BeginForm("","",FormMethod.Post,new { @Id = "iform-search-account" , @OnClick = "return false" }))
                                    {
                                        <label>Search by:</label>
                                        List<SelectListItem> list = new List<SelectListItem>();
                                        list.Add(new SelectListItem { Text = "Name", Value = "Name", Selected = true });
                                        list.Add(new SelectListItem { Text = "E-mail", Value = "E-mail" });
                                        list.Add(new SelectListItem { Text = "Phone", Value = "Phone" });

                                        <div class="selectContainer">
                                            @Html.DropDownListFor(model => model.SearchAccount.searchBy, list, new { @Class = "form-control", @Id = "iselect-srch-by", @Name = "srch-by" })
                                            @Html.ValidationMessageFor(model => model.SearchAccount.searchBy, "", new { @Class = "cspan-error" })
                                        </div>
                                        <br />
                                        <label>Search for:</label>
                                        <br />
                                        @Html.TextBoxFor(model => model.SearchAccount.searchFor, new { @Class = "form-control", @Id = "idiv-searchfor" })
                                        @Html.ValidationMessageFor(model => model.SearchAccount.searchFor, "", new { @Class = "cspan-error" , @Id = "cspan-searchby-error" })
                                        <br />
                                        <button type="submit" class="btn btn-success cbtn-srch" id="ibtn-acc"><span class="fa fa-search"></span> Search</button>
                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                @RenderBody()
            </div>
            <div class="col-md-2" style="background-color:#b6ff00">This is for Adds</div>
        </div>
    </div>
    <div id="imodal-people-srch-result" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div id="imodal-hdr" class="modal-header">
                    <button id="ibtn-close"type="button" class="close" data-dismiss="modal">&times;</button>
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#itab-non-specialists" role="tab" data-toggle="tab">Non-specialists</a></li>
                        <li role="presentation"><a href="#itab-doctors" role="tab" data-toggle="tab">Doctors</a></li>
                        <li role="presentation"><a href="#itab-pharmacists" role="tab" data-toggle="tab">Pharmacists</a></li>
                    </ul>
                </div>
                <div id="imodal-bdy" class="modal-body cscrollbar-container cscrollbar-modal">
                    <div class="tab-content">
                        <div id="itab-non-specialists" role="tabpanel" class="tab-pane active">
                        </div>
                        <div id="itab-doctors" role="tabpanel" class="tab-pane">
                        </div>
                        <div id="itab-pharmacists" role="tabpanel" class="tab-pane">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/modal.js" type="application/javascript"></script>
    <script src="~/Scripts/sos.js" type="application/javascript"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/datevalidator.js"></script>
    <script src="~/Scripts/searchResult.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>